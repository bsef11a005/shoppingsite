@model Shooing.Models.Product

@{
    ViewBag.Title = "search1";
}
<script src="~/Scripts/jquery-ui-1.8.24.js"></script>
<script src="~/Scripts/jquery-1.4.1.min.js"></script>
<h2>Search using Ajax</h2>
Enter Name:<input type="text" name="Name" id="Name" />
<input type="button" value="Search" id="b1" />
<table  id="t1"></table>

<script>

    $(document).ready(function () {


        $('#b1').click(function () {
            
            var name = $('#Name').val();
            alert(name);
            $.getJSON('/Product/searchAjax?us=' + name, function (x1) {
                //alert("abc1");
                
                    // alert("abc2");
                    // $("#t1").append('<tr><th>Pizza Name</th><th>Pizza Price</th></tr>');
                    $.each(x1, function (i, item) {
                        $("#t1").append("<tr bgcolor= lightblue><td>" + item.Name + "</td><td>" + item.Price + "</td>" + "<td> <img src=~/Files/" + "'" + item.Image + "'" + "height=50 width=50> </td>" + "</tr>");
                        //$("#t1").append('<tr><td><img src=' + "'" + "detail.gif" +"'" + "height=50 width=50> </td><td>" + item.Name + '</td></tr>')
                    });
               
            });
        });
        });
      


</script>

